<%= render "layouts/header" %>

<%= render "layouts/filters" %>
<% if user_signed_in? %>
<% if params[:tag].present?  %>
<% else %>
<section id="ownProfiles">
  	<div class="container-fluid bg-inverse">
    <div class="row">
		<div class="col-xs-12 col-sm-12">
			<div id="noProfileAdded">
				<h1>Omat snapchat profiilit</h1>
				<h2>Lisää oma snapchat tunnuksesi</h2>
				<%= link_to 'Lisää profiili', new_profile_path, :class => "linkbutton" %>
				<h3>Voi lisää useampia profiileita.</h3>
			</div>
		</div>
	</div>
  	</div>
</section>
<% end %>
<% end %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Country</th>
    <th>Registered at</th>
  </tr>
  <% @profiles.each do |profile| %>
    <tr>
      <td>
        <%= profile.name %>
      </td>
      <td>
        <%= profile.nickname %>
      </td>
      <td>
        <%= profile.location_name %>
      </td>
      <td>
        <%= profile.created_at.to_date.to_s(:long) %>
      </td>
    </tr>
  <% end %>
</table>
